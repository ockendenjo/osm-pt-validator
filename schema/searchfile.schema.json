{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Routefile",
    "description": "A file with routes to be validated",
    "type": "object",
    "properties": {
        "searches": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "bbox": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        },
                        "files": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "check_missing": {
                            "type": "boolean"
                        },
                        "check_v1": {
                            "type": "boolean"
                        }
                    },
                    "required": ["bbox", "files"],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["searches"],
    "additionalProperties": false
}
